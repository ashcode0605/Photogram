<div class="container">

     <h4 class="text-center"> Welcome To Photogram </h4>

     <% @posts.each do |post| %>
          <div class="thumbnail">
               <div class="caption text-center">
                    <%= post.caption %>
               </div>
               <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
          </div>
     <% end %>

</div>
